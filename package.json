{
  "name": "pontaj-ergio-desktop",
  "version": "1.0.6",
  "description": "Aplicație desktop pentru pontaj ERGIO",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "pontaj",
    "electron",
    "ergio"
  ],
  "author": "Robert Laic",
  "license": "Software dezvoltat intern pentru uzul exclusiv al ERGIO by Merluscă. Drepturi rezervate.",
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^37.2.1",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "axios": "^1.5.0",
    "pg": "^8.16.3",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
     "compression": "^1.7.4",
    "xlsx-style": "^0.8.13"
  },
  "build": {
    "appId": "com.ergio.pontaj",
    "productName": "Pontaj ERGIO",
    "directories": {
      "output": "dist",
      "buildResources": "src/assets"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "pontaj.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "pontaj.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "pontaj.icns"
    }
  }
}
